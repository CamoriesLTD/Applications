<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="paymentCardVM" type="com.hive.app.modules.paymentcard.data.viewmodel.PaymentCardVM"/>
    </data>
    <FrameLayout android:id="@+id/framePaymentCard"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <HorizontalScrollView android:fillViewport="true"
            android:id="@+id/horizontalScrollHorizontalscrollshape"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_14pxv"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent" android:scrollbars="none">
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumnshape"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearStatusBar"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_23pxh"
                    android:layout_marginStart="@dimen/_23pxh"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageShape"
                        android:layout_height="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_27pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_shape"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_shape"/>
                    <LinearLayout android:id="@+id/linearRowshapeOne"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginStart="@dimen/_233pxh"
                        android:layout_weight="0.71"
                        android:layout_width="0dp" android:orientation="horizontal">
                        <ImageView android:id="@+id/imageShapeOne"
                            android:layout_height="@dimen/_10pxh"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_width="@dimen/_17pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_shape_black_900"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_shape_black_900"/>
                        <ImageView android:id="@+id/imageShapeTwo"
                            android:layout_height="@dimen/_10pxh"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_5pxh"
                            android:layout_width="@dimen/_15pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_shape_black_900_10x15"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_shape_black_900_10x15"/>
                        <FrameLayout android:id="@+id/frameStackpath"
                            android:layout_height="@dimen/_11pxv"
                            android:layout_marginStart="@dimen/_5pxh" android:layout_width="@dimen/_22pxh">
                            <ImageView android:id="@+id/imagePath"
                                android:layout_gravity="start"
                                android:layout_height="@dimen/_11pxh"
                                android:layout_width="@dimen/_22pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_path"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_path"/>
                            <ImageView android:id="@+id/imagePathOne"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_7pxh"
                                android:layout_marginHorizontal="@dimen/_2pxh"
                                android:layout_marginVertical="@dimen/_2pxv"
                                android:layout_width="@dimen/_18pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_path_black_900"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_path_black_900"/>
                        </FrameLayout>
                        <ImageView android:id="@+id/imagePathTwo"
                            android:layout_height="@dimen/_4pxh"
                            android:layout_marginBottom="@dimen/_3pxv"
                            android:layout_marginStart="@dimen/_1pxh"
                            android:layout_marginTop="@dimen/_4pxv"
                            android:layout_width="@dimen/_1pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_path_black_900_4x1"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_path_black_900_4x1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearRowarrowleft"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_40pxh"
                    android:layout_marginStart="@dimen/_40pxh"
                    android:layout_marginTop="@dimen/_41pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageArrowleft"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_marginBottom="@dimen/_6pxv"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_9pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrowleft"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPayments"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_98pxh"
                        android:layout_weight="0.86"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{paymentCardVM.paymentCardModel.txtPayments}"
                        style="@style/txtPoppinsbold16" tools:text="@string/lbl_payments"/>
                    <View android:background="@color/teal_300"
                        android:id="@+id/lineIcon"
                        android:layout_height="@dimen/_16pxv"
                        android:layout_marginBottom="@dimen/_6pxv"
                        android:layout_marginStart="@dimen/_102pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.04" android:layout_width="0dp"/>
                </LinearLayout>
                <com.asksira.loopingviewpager.LoopingViewPager
                    android:gravity="start"
                    android:id="@+id/imageSliderSlidershapeThree"
                    android:layout_height="@dimen/_170pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_36pxv"
                    android:layout_width="match_parent"
                    app:autoScroll="true" app:isInfinite="true" app:scrollInterval="5000"/>

                <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                    android:id="@+id/indicatorDots"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_171pxh"
                    android:layout_marginStart="@dimen/_171pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="wrap_content"
                    app:drawable_normal="@drawable/indicator_unselected_bg_bluegray_300_75_radius_8"
                    app:drawable_selected="@drawable/indicator_selected_bg_teal_300_radius_8"
                    app:indicator_size="@dimen/_6pxh" app:indicator_spacing="@dimen/_6pxh"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCardholderName"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_218pxh"
                    android:layout_marginStart="@dimen/_218pxh"
                    android:layout_marginTop="@dimen/_64pxv"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:singleLine="true"
                    android:text="@{paymentCardVM.paymentCardModel.txtCardholderName}"
                    style="@style/txtPoppinsmedium14" tools:text="@string/lbl_cardholder_name"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_bluegray_900_19_radius_8"
                    android:ellipsize="end"
                    android:hint="@string/msg_enter_your_name"
                    android:id="@+id/etGroupThirty"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:paddingBottom="@dimen/_13pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_14pxh"
                    android:paddingTop="@dimen/_14pxv"
                    android:singleLine="true"
                    android:text="@={paymentCardVM.paymentCardModel.etGroupThirtyValue}"
                    android:textColorHint="@color/bluegray_900_7e"
                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCardNumber"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_249pxh"
                    android:layout_marginStart="@dimen/_249pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:singleLine="true"
                    android:text="@{paymentCardVM.paymentCardModel.txtCardNumber}"
                    style="@style/txtPoppinsmedium14" tools:text="@string/lbl_card_number"/>
                <EditText
                    android:background="@drawable/rectangle_bg_white_a700_border_bluegray_900_19_radius_8"
                    android:ellipsize="end"
                    android:hint="@string/msg_enter_card_numb"
                    android:id="@+id/etGroupTwentyNine"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:paddingBottom="@dimen/_14pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_14pxh"
                    android:paddingTop="@dimen/_13pxv"
                    android:singleLine="true"
                    android:text="@={paymentCardVM.paymentCardModel.etGroupTwentyNineValue}"
                    android:textColorHint="@color/bluegray_900_7e"
                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearRowcvvcvc"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearCvvcvc"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_width="0dp" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtCvvcvc"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_7pxh"
                            android:singleLine="true"
                            android:text="@{paymentCardVM.paymentCardModel.txtCvvcvc}"
                            style="@style/txtPoppinsmedium14" tools:text="@string/lbl_cvv_cvc"/>
                        <EditText
                            android:background="@drawable/rectangle_bg_white_a700_border_bluegray_900_19_radius_8"
                            android:ellipsize="end"
                            android:hint="@string/lbl_123"
                            android:id="@+id/etGroupTwentyEight"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_7pxh"
                            android:paddingBottom="@dimen/_14pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingStart="@dimen/_14pxh"
                            android:paddingTop="@dimen/_13pxv"
                            android:singleLine="true"
                            android:text="@={paymentCardVM.paymentCardModel.etGroupTwentyEightValue}"
                            android:textColorHint="@color/bluegray_900_7e"
                            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearExpDate"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.5"
                        android:layout_width="0dp" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtExpDateTwo"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_7pxh"
                            android:singleLine="true"
                            android:text="@{paymentCardVM.paymentCardModel.txtExpDateTwo}"
                            style="@style/txtPoppinsmedium14" tools:text="@string/lbl_exp_date"/>
                        <EditText
                            android:background="@drawable/rectangle_bg_white_a700_border_bluegray_900_19_radius_8"
                            android:ellipsize="end"
                            android:hint="@string/lbl_20_20"
                            android:id="@+id/etGroupTwentySeven"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6pxv"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_7pxh"
                            android:paddingBottom="@dimen/_14pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingStart="@dimen/_14pxh"
                            android:paddingTop="@dimen/_13pxv"
                            android:singleLine="true"
                            android:text="@={paymentCardVM.paymentCardModel.etGroupTwentySevenValue}"
                            android:textColorHint="@color/bluegray_900_7e"
                            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnSaveCard"
                    android:layout_gravity="end"
                    android:layout_height="@dimen/_49pxv"
                    android:layout_marginEnd="@dimen/_30pxh"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_64pxv"
                    android:layout_width="@dimen/_315pxh"
                    android:lineSpacingExtra="@dimen/_7pxh"
                    android:paddingBottom="@dimen/_14pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_14pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_save_card"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_5" tools:text="@string/lbl_save_card"/>
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>
</layout>
